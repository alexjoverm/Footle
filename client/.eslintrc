{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "forOf": true,
      "jsx": true,
      "es6": true,
      "experimentalObjectRestSpread" : true
    }
  },
  "plugins": [
    "react",
    "import"
  ],
  "rules": {
    "semi": [2, "never"],
    "import/no-unresolved": 0,
    "key-spacing": [2, {
        "mode": "minimum"
    }],
    "no-multi-spaces": [0, {
        "exceptions": {
            "VariableDeclarator": true
        }
    }]
  }
}
