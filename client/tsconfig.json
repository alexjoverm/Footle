{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths" : {
      "app/*":        ["./src/app/*"],
      "components/*": ["./src/app/components/*"],
      "interfaces/*": ["./src/app/interfaces/*"],
      "models/*":     ["./src/app/models/*"],
      "modules/*":    ["./src/app/modules/*"],
      "services/*":   ["./src/app/services/*"],
      "store/*":      ["./src/app/store/*"],
      "styles/*":     ["./src/styles/*"],
      "utils/*":      ["./src/app/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "typings/main",
    "typings/main.d.ts"
  ],
  "types": [
    "hammerjs"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
