{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "forOf": true,
      "es6": true,
      "experimentalObjectRestSpread" : true
    }
  },
  "rules": {
    "semi": [2, "never"],
    "no-console": 0,
    "no-param-reassign": 0,
    "key-spacing": [2, {
        "mode": "minimum"
    }],
    "no-multi-spaces": [0, {
        "exceptions": {
            "VariableDeclarator": true
        }
    }]
  }
}
